@page "/"
@using Microsoft.AspNetCore.Components.QuickGrid

<PageTitle>Index</PageTitle>

<h1>Hello, world!</h1>

<div>
<QuickGrid Items="@forecasts" ResizableColumns=true>
    <PropertyColumn Property="x => x.Date" Sortable="true">
        <ColumnOptions>
            Hello
        </ColumnOptions>
    </PropertyColumn>
    <PropertyColumn Property="x => x.TemperatureC" Sortable="true" />
    <TemplateColumn Title="Temperature (F)" Align="Align.Right" SortBy="@(x => x.SortByAscending(y => y.TemperatureC))">
        <ColumnOptions>
            Hello
        </ColumnOptions>
        <ChildContent>
            @(((context.TemperatureC * 1.8) + 32).ToString("N0"))
        </ChildContent>
    </TemplateColumn>
</QuickGrid>
</div>

@code {
    IQueryable<WeatherForecast> forecasts = new WeatherForecast[]
    {
        new WeatherForecast { Date = DateTime.Now.Date, TemperatureC = 23 },
        new WeatherForecast { Date = DateTime.Now.Date.AddDays(1), TemperatureC = 28 },
    }.AsQueryable();

    class WeatherForecast
    {
        public DateTime Date { get; set; }
        public int TemperatureC { get; set; }
    }
}
