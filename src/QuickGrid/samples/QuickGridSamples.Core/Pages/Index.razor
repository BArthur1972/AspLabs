@page "/"
@using Microsoft.AspNetCore.Components.QuickGrid

<PageTitle>Index</PageTitle>

<h1>Hello, world!</h1>

<QuickGrid Items="@forecasts">
    <PropertyColumn Property="x => x.Date" />
    <PropertyColumn Property="x => x.TemperatureC" Title="Temperature (C)" Align="Align.Right" />
    <PropertyColumn Property="x => (x.TemperatureC * 1.8) + 32" Format="N0" Title="Temperature (F)" Align="Align.Right" />
</QuickGrid>

@code {
    IQueryable<WeatherForecast> forecasts = new WeatherForecast[]
    {
        new WeatherForecast { Date = DateTime.Now.Date, TemperatureC = 23 },
        new WeatherForecast { Date = DateTime.Now.Date.AddDays(1), TemperatureC = 28 },
    }.AsQueryable();

    class WeatherForecast
    {
        public DateTime Date { get; set; }
        public int TemperatureC { get; set; }
    }
}
